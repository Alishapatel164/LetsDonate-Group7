@model DataModels.Donation

@{
    ViewData["Title"] = "Donate_us_Today";
}
<h1>@ViewData["Title"]</h1>
<body style="background-color:powderblue;">
    <fieldset>

        @using (Html.BeginForm())
        {
        <table width="20%">
            <tr>
                <td>
                    @Html.LabelFor(model => model.Organization)
                    @Html.DropDownList("Organization", new List<SelectListItem>
                   {
                    new SelectListItem { Text = "Education"},
                    new SelectListItem { Text = "Animals"},
                    new SelectListItem { Text = "Memorial"},
                    new SelectListItem { Text = "FoodBank"},
                    new SelectListItem { Text = "CancerPatient"},
                    new SelectListItem { Text = "Medical"}
                    }, "Select Organization")
                    @*@Html.EditorFor(model => model.Organization)*@
                </td>
            </tr>
            <tr>
                <td><label>Name</label></td>
            </tr>
            <tr>
                <td>@Html.EditorFor(model => model.Donar_name)</td>
            </tr>
            <tr>
                <td><label>Email Address</label></td>
            </tr>
            <tr>
                <td>@Html.EditorFor(model => model.Email_id)</td>
            </tr>
            <tr>
                <th>
                    @Html.LabelFor(model => model.Address)
                    @Html.EditorFor(model => model.Address)
                </th>
            </tr>
            <tr>
                <td>@Html.LabelFor(model => model.City)</td>
            </tr>
            <tr>
                <td>@Html.EditorFor(model => model.City)</td>
            </tr>
            <tr>
                <th>
                    @Html.LabelFor(model => model.Amount)
                    @Html.EditorFor(model => model.Amount)
                </th>
            </tr>
            <tr>
                <th>
                    @Html.LabelFor(model => model.Contact_No)
                    @Html.EditorFor(model => model.Contact_No)
                </th>
            </tr>
            <tr>
                <th>
                    <label>Donate 2 % for Us</label>
                    @Html.EditorFor(model => model.Our_Org)
                </th>
            </tr>
            <tr>
                <th>
                    <button type="submit">Donate Now</button>
                </th>
            </tr>
        </table>

        }
    </fieldset>
</body>
@if (Model != null)
{
    <p>Thank-you @Model.Donar_name for your donation</p>

}

